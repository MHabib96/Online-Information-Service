@model NetCoursework.Models.Event

@{
    ViewBag.Title = "EventForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Event/Activities</h2>

@using (Html.BeginForm("Save", "Event"))
{
    <div class="form-group">
        @Html.LabelFor(e => e.Name)
        @Html.TextBoxFor(e => e.Name, new { @Class = "form-control" })
        @Html.ValidationMessageFor(e => e.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Eventdate)
        @Html.TextBoxFor(e => e.Eventdate, "{0:d MMM yyyy}", new { @Class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.EventSubject)
        @Html.TextBoxFor(e => e.EventSubject, new { @Class = "form-control" })
        @Html.ValidationMessageFor(e => e.EventSubject)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Location)
        @Html.TextBoxFor(e => e.Location, new { @Class = "form-control" })
        @Html.ValidationMessageFor(e => e.Location)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.ContactNumber)
        @Html.TextBoxFor(e => e.ContactNumber, new { @Class = "form-control" })
        @Html.ValidationMessageFor(e => e.ContactNumber)
    </div>
    @Html.HiddenFor(e => e.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
